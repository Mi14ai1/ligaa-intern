mixin intro()
  section.intro(data-animate="intro" data-section-animation data-start="top top" data-end="bottom top")
    .intro__sticky
      .container
        .intro__heading
          //words lines splitting
          h1.intro__title.title(data-splitting) Задачки<br>на прокачку
          p.intro__description(data-splitting) Задачи на&nbsp;интерфейсную логику,<br>которые часто встречаются<br>на&nbsp;реальных проектах


        .intro__cards
          each card in cards
            if card.offset
              a.card-simple(href= card.href data-move-to= card.moveTo data-offset= card.offset)
                h2.card-simle__title.title.title--h3!= card.title
            else
              a.card-simple(href= card.href data-move-to= card.moveTo)
                h2.card-simle__title.title.title--h3!= card.title
      .intro__bg
